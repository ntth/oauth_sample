<%# facebook %>
<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/ja_JP/all.js#xfbml=1";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

<% if flash[:notice].present? %>
<p class="notice"><%= flash[:notice] %></p>
<% end %>
<%
  case @view
  when 'flash'
%>
<div class="alternative3d">
  <div class="media"><script type="text/javascript" src="/views/inject.js"><![CDATA[
]]></script></div>
  <div class="copy"><p>Equirectangular panorama with ActionScript(Alternativa3D).</p>
  <p><a href="https://github.com/suzumura-ss/flash_sphere_panorama">https://github.com/suzumura-ss/flash_sphere_panorama</a></p></div>
</div>
<%
  when 'css'
%>
<div class="css3_3d_transform">
  <div class="header">
    <link rel="stylesheet" href="/views/cubic.css" type="text/css" />
    <script src="/views/js/jquery.min.js" type="text/javascript"></script>
    <script src="/views/js/jquery.mousewheel.min.js" type="text/javascript"></script>
    <script src="/views/js/cubic.js" type="text/javascript"></script>
    <style id="camera"></style>
  </div>
  <div class="body" onload="init()">
    <div id="controller">&nbsp;</div>
    <div id="container" class="container"></div>
    <div id="loading" class="infowindow">loading...<br />please wait</div>
    <div id="texture">
      <img src="/views/forest1.jpg" />
      <img src="/views/forest2.jpg" />
      <img src="/views/forest3.jpg" />
      <img src="/views/forest4.jpg" />
      <img src="/views/forest5.jpg" />
      <img src="/views/forest6.jpg" />
    </div>
  </div>
  <p class="menu"><%= check_box_tag 'rotation','rotation', false, :onclick=>"rotation_check();" %><%= label_tag 'rotation', '自動で横回転する'  %></p>
  <div class="copy"><p>Cubic panorama with CSS3/3D-Transform, 6-textures.</p>
    <p><a href="https://github.com/suzumura-ss/css3d_cubic_panorama">https://github.com/suzumura-ss/css3d_cubic_panorama</a></p></div>
</div>
<%
  when 'css_touch'
%>
  <link rel="stylesheet" href="/views/css_touch.css" type="text/css" />
  <script src="/views/css_touch.js" type="text/javascript"></script>
  <div id="container">
    <div id="cube">
      <img id="side1" class="side" src="/views/grandcentral1.png" />
      <img id="side2" class="side" src="/views/grandcentral2.png" />
      <img id="side3" class="side" src="/views/grandcentral3.png" />
      <img id="side4" class="side" src="/views/grandcentral4.png" />
      <img id="side5" class="side" src="/views/grandcentral5.png" />
      <img id="side6" class="side" src="/views/grandcentral6.png" />
    </div>
  </div>
  <div id="controller">&nbsp;</div>
  <div id="loading">loading...<br />please wait</div>
  <p class="menu"><%= check_box_tag 'rotation','rotation', false, :onclick=>"rotation_check();" %><%= label_tag 'rotation', '自動で横回転する'  %></p>
<% end %>
<% unless @view == 'css_touch' %>
<div class="menu <%= @view %>">
  <ul class="social_bookmark">
    <%# twitter %>
    <li class="twitter"><a href="http://twitter.com/share" class="twitter-share-button" data-count="horizontal" data-lang="ja">Tweet</a><script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script></li>
    <%# facebook %>
    <li class="facebook"><div class="fb-like" data-href="<%= url_for(controller: 'posts', action: 'show', view: @view, only_path: false) %>" data-send="false" data-layout="button_count" data-width="100" data-show-faces="true"></div></li>
  </ul>
  <p class="top"><%= link_to 'Top', root_path %></p>
</div>
<% end %>
